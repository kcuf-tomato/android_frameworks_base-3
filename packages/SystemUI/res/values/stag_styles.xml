<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Alert slider -->
    <style name="TriStateUiText">
        <item name="android:textSize">14.0sp</item>
        <item name="android:fontFamily">@*android:string/config_headlineFontFamilyMedium</item>
    </style>

    <style name="CustomTunerSettings" parent="@android:style/Theme.DeviceDefault.Settings">
        <item name="android:windowActionBar">false</item>
        <item name="preferenceTheme">@style/CustomTunerPreferenceTheme</item>
    </style>

    <style name="CustomTunerPreferenceTheme" parent="@style/PreferenceThemeOverlay.SettingsBase">
        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.CategoryTitle</item>
    </style>

    <style name="TextAppearance.CategoryTitle"
           parent="@*android:style/TextAppearance.DeviceDefault.Body2">
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">11sp</item>
        <!-- 0.8 Spacing, 0.8/11 = 0.072727273 -->
        <item name="android:letterSpacing">0.072727273</item>
    </style>
</resources>
